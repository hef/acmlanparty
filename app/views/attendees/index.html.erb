<h1>Attendees</h1>

<table>
  <tr>
    <th>Registered</th>
    <th>Lan party</th>
    <th>User</th>
    <th>Handle</th>
  </tr>

<% for attendee in @attendees %>
  <tr>
    <td><%=h attendee.created_at.strftime("%Y/%m/%d") %></td>
    <td><%=h attendee.lan_party.title %></td>
    <td><%=h attendee.user.login%></td>
    <td><%=h attendee.handle %></td>
    <td><%= link_to 'Show', attendee %></td>
    <td><%= link_to 'Edit', edit_attendee_path(attendee) %></td>
    <td><%= link_to 'Destroy', attendee, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New attendee', new_attendee_path %>
