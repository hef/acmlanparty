<h1>Editing sponsor</h1>

<% form_for(@sponsor) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :img_small %><br />
    <%= f.text_field :img_small %>
  </p>
  <p>
    <%= f.label :img_full %><br />
    <%= f.text_field :img_full %>
  </p>
  <p>
    <%= f.label :alttext %><br />
    <%= f.text_field :alttext %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

